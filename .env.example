# ============================================
# SISTEMA DE SIMULACIÓN MONTE CARLO DISTRIBUIDO
# Variables de Entorno - Template
# ============================================
#
# Copiar este archivo a .env y ajustar valores según necesidad:
#   cp .env.example .env
#

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASS=password
RABBITMQ_VHOST=/
RABBITMQ_MGMT_PORT=15672

# ============================================
# Queue Names
# ============================================
QUEUE_MODELO=cola_modelo
QUEUE_ESCENARIOS=cola_escenarios
QUEUE_RESULTADOS=cola_resultados
QUEUE_STATS_PRODUCTOR=cola_stats_productor
QUEUE_STATS_CONSUMIDORES=cola_stats_consumidores

# Dead Letter Queues (Fase 4.1)
QUEUE_DLQ_ESCENARIOS=cola_dlq_escenarios
QUEUE_DLQ_RESULTADOS=cola_dlq_resultados

# ============================================
# Producer Configuration
# ============================================
# Optimización Fase 4: Intervalo aumentado de 1s a 5s (80% reducción en mensajes)
PRODUCER_STATS_INTERVAL=5  # segundos

# ============================================
# Consumer Configuration
# ============================================
# Optimización Fase 4: Intervalo aumentado de 2s a 5s (60% reducción en mensajes)
CONSUMER_STATS_INTERVAL=5  # segundos
CONSUMER_PREFETCH_COUNT=1  # Fair dispatch (Fase 4.2)
CONSUMER_TIMEOUT=30  # segundos

# Error Handling (Fase 4.1)
CONSUMER_MAX_RETRIES=3
CONSUMER_RETRY_DELAY=5  # segundos

# ============================================
# Dashboard Configuration
# ============================================
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8050
DASHBOARD_REFRESH_INTERVAL=2000  # milisegundos

# ============================================
# Simulation Configuration
# ============================================
DEFAULT_NUM_ESCENARIOS=1000
DEFAULT_RANDOM_SEED=42

# Modelo de simulación a usar (solo para Docker)
MODELO_FILE=modelos/ejemplo_simple.ini

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=colored  # colored, json, simple

# ============================================
# RabbitMQ Advanced (Fase 4.2)
# ============================================
RABBITMQ_HEARTBEAT=60  # segundos
RABBITMQ_CONNECTION_TIMEOUT=10  # segundos
RABBITMQ_BLOCKED_TIMEOUT=300  # segundos
RABBITMQ_SOCKET_TIMEOUT=10  # segundos
RABBITMQ_STACK_TIMEOUT=15  # segundos

# Connection Pooling
RABBITMQ_POOL_SIZE=10
RABBITMQ_POOL_MAX_OVERFLOW=5
RABBITMQ_POOL_TIMEOUT=30  # segundos
RABBITMQ_POOL_RECYCLE=3600  # segundos
